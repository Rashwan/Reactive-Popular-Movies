<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.browse_fragment"/>
    <style name="AppTheme.details_fragment"/>
    <style name="grid_title_text_big" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="title_text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="body_bold_text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>
    <style name="body_text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/secondaryText</item>

    </style>
    <style name="overflow_menu" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:radioButtonStyle">@style/radioButton</item>
    </style>
    <style name="radioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@android:color/white</item>
    </style>

</resources>

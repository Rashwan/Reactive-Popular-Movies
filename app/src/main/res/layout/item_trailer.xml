<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="158dp"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:layout_margin="4dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/trailer_image_container">
        <ImageView
            android:id="@+id/image_youtube_trailer"
            android:layout_width="158dp"
            android:layout_height="118dp"
            app:srcCompat="@color/colorAccent"
            android:contentDescription="@string/content_description_youtube_trailer_image"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_play_trailer"
            app:srcCompat="@drawable/ic_play_circle_48dp"
            android:layout_gravity="center"
            android:background="@null"
            android:visibility="gone"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/text_trailer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_trailer_name"
        android:textColor="@color/secondaryText"
        android:layout_gravity="center"
        android:textSize="16sp"
        />
</LinearLayout>
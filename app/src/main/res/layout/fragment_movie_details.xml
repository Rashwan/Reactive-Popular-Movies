<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="34dp"
            app:expandedTitleMarginBottom="15dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/blur_poster"
                    app:layout_collapseMode="parallax"
                    android:contentDescription=""
                    android:focusableInTouchMode="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/scrim_gradiant">
                </View>
            </FrameLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_details"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/scrollView"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/constraint_layout">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="270dp"
                app:srcCompat="@color/colorPrimaryDark"
                android:id="@+id/poster_image"
                app:layout_constraintLeft_toLeftOf="@+id/constraint_layout"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/constraint_layout"
                android:layout_marginTop="32dp" />

            <TextView
                android:text="Release Date"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/releaseTitle"
                android:textAppearance="@style/title_text"
                app:layout_constraintLeft_toRightOf="@+id/poster_image"
                app:layout_constraintTop_toTopOf="@+id/constraint_layout"
                android:layout_marginTop="64dp"
                app:layout_constraintRight_toRightOf="@+id/constraint_layout" />
            <TextView
                android:text="Release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/release"
                android:textAppearance="@style/body_bold_text"
                app:layout_constraintLeft_toRightOf="@+id/poster_image"
                app:layout_constraintTop_toBottomOf="@+id/releaseTitle"
                android:layout_marginTop="8dp"
                app:layout_constraintRight_toRightOf="@+id/constraint_layout" />

            <TextView
                android:text="vote title"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/voteTitle"
                android:textAppearance="@style/title_text"
                app:layout_constraintLeft_toRightOf="@+id/poster_image"
                app:layout_constraintTop_toBottomOf="@+id/release"
                android:layout_marginTop="40dp"
                app:layout_constraintRight_toRightOf="@+id/constraint_layout" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vote"
                android:text="Vote"
                android:textAppearance="@style/body_bold_text"
                app:layout_constraintLeft_toRightOf="@+id/poster_image"
                app:layout_constraintTop_toBottomOf="@+id/voteTitle"
                android:layout_marginTop="8dp"
                app:layout_constraintRight_toRightOf="@+id/constraint_layout" />

            <View
                android:id="@+id/poster_discription_divider"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/listDivider"
                android:padding="3dp"
                app:layout_constraintLeft_toLeftOf="@+id/constraint_layout"
                app:layout_constraintTop_toBottomOf="@+id/poster_image"
                app:layout_constraintRight_toRightOf="@+id/constraint_layout" />

            <TextView
                android:text="The Rock is the best damn Intercontinental Champion there ever was. The Rock is gonna lay the smackdown on your candy ass. How dare you, you little jabroni. That's 10 pounds of monkey crap in a 5 pound bag! I'm gonna stick your head so far up your ass your gonna have to cut holes in your nipples to see! The Rock would wipe a monkey's ass with what you think. Stone Cold is the biggest piece of Texas trailer park trash walking God's green earth. Who is this roody-poo? Jabroni! For the millions... and millions of The Rock's fans..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:paddingBottom="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/constraint_layout"
                app:layout_constraintTop_toBottomOf="@+id/poster_discription_divider"
                android:layout_marginTop="8dp"
                app:layout_constraintRight_toRightOf="@+id/constraint_layout" />


            <View
                android:id="@+id/discription_trailers_divider"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/listDivider"
                android:padding="3dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@+id/constraint_layout"
                app:layout_constraintTop_toBottomOf="@+id/description"
                app:layout_constraintRight_toRightOf="@+id/constraint_layout" />

            <TextView
                android:id="@+id/tv_no_internet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="please check your internet connection"
                android:textSize="24sp"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@+id/constraint_layout"
                app:layout_constraintTop_toBottomOf="@+id/discription_trailers_divider"
                app:layout_constraintRight_toRightOf="@+id/constraint_layout" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refresh"
                android:id="@+id/button_refresh"
                android:padding="16dp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@+id/constraint_layout"
                app:layout_constraintTop_toBottomOf="@+id/tv_no_internet"
                app:layout_constraintRight_toRightOf="@+id/constraint_layout" />

            <TextView
                android:text="Trailers"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trailers_title"
                android:textAppearance="@style/title_text"
                android:paddingBottom="4dp"
                android:visibility="gone"

                app:layout_constraintLeft_toLeftOf="@+id/constraint_layout"
                app:layout_constraintTop_toBottomOf="@+id/tv_no_internet" />
            <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/rv_trailers"
                android:paddingBottom="8dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@+id/constraint_layout"
                app:layout_constraintTop_toBottomOf="@+id/trailers_title">
            </android.support.v7.widget.RecyclerView>
            <View
                android:id="@+id/trailers_reviews_divider"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/listDivider"
                android:padding="3dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@+id/constraint_layout"
                app:layout_constraintTop_toBottomOf="@+id/rv_trailers"
                app:layout_constraintRight_toRightOf="@+id/constraint_layout" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reviews"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/review_title"
                android:paddingBottom="4dp"
                android:textAppearance="@style/title_text"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@+id/constraint_layout"
                app:layout_constraintTop_toBottomOf="@+id/trailers_reviews_divider" />
            <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/rv_reviews"
                android:paddingBottom="8dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@+id/constraint_layout"
                app:layout_constraintTop_toBottomOf="@+id/review_title"
                app:layout_constraintRight_toRightOf="@+id/constraint_layout">

            </android.support.v7.widget.RecyclerView>
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:layout_gravity="bottom|right"
        app:layout_anchor="@id/scrollView"
        app:layout_anchorGravity="bottom|right|end"
        app:srcCompat="@drawable/fab_heart_empty"
        android:id="@+id/fab_favorite"
        android:layout_margin="16dp"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:layout_behavior="com.rashwan.reactive_popular_movies.common.utilities.ScrollAwareFabBehavior"
        />

</android.support.design.widget.CoordinatorLayout>